<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_gradient">

    <TextView
        android:id="@+id/searchdescr"
        android:textSize="25sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/searchaddress"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:layout_weight="0" 
        android:layout_marginBottom="40sp"/>
	<TextView
        android:id="@+id/searchdescr"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Provide Address"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="#FFFFFF"
        android:layout_weight="0"
        android:layout_marginLeft="25sp"/>
    <EditText
        android:id="@+id/edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="onSubmitClick"
        android:layout_gravity="right"
        android:layout_marginRight="25sp"
        android:paddingRight="20sp"
        android:paddingLeft="20sp"/>
    
    <TextView
        android:id="@+id/orGetGPSCoords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/orGetGPSCoords"
        android:layout_weight="0" 
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttongps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onLocationClick"
        android:text="Use My Location" 
        android:drawableRight="@drawable/target"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="20sp"
        android:paddingRight="10sp"/>

</LinearLayout>